
<% if notice != nil %>
  <p id="notice">
    <div class="alert alert-success text-centered" role="alert">
      <p class="text-center"><%= notice %></p>
    </div>
  </p>
<% end %>

<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-primary" <%= link_to 'New Event', new_location_event_path(@location) %></a>
  </div>
  <h1><%= @location.name %></h1>
</div>

<form class="form-horizontal">
  <div class="form-group">
    <div class="col-md-4">
      <h6>Location Address: </h6>
      <%= @location.address %>
    </div>
    <div class="col-md-4">
      <h6>Location Zipcode </h6>
      <%= @location.zipcode %>
    </div>
  </div>
</form>

<br>

<ul class="breadcrumb">
  <li><%= link_to "Locations", locations_path %></li>
  <li class="active"><%= @location.name %></li>
</ul>



<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Events:</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to "#{event.description}", location_event_path(@location, event) %></td>
        <td class="text-right">
          <a class="btn btn-success" <%= link_to 'Edit', edit_location_event_path(@location, event) %>
          <a class="btn btn-danger" <%= link_to 'Delete', location_event_path(@location, event), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
