<%= form_for([@location, @event]) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <div class="form-horizontal">
    <div class="form-group">
      <div class="field">
        <div class="control-label col-md-2"><%= f.label :description %><br></div>
        <div class="form-controls col-md-4"><%= f.text_field :description %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <div class="control-label col-md-2"><%= f.label :date %><br></div>
        <div class="form-controls col-md-4"><%= f.date_field :date %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <div class="control-label col-md-2"><%= f.label 'Requires id:' %><br></div>
        <div class="form-controls col-md-4"><%= f.check_box(:requires_id) %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-4">
        <% if @event.description == nil %>
          <input class="btn btn-primary" name="commit" type="submit" value="Create Event">
        <% else %>
          <input class="btn btn-primary" name="commit" type="submit" value="Update Event">
        <% end %>
          <a class="btn btn-default" <%= link_to 'Cancel', locations_path %>
      </div>
    </div>
  </div>
<% end %>
